\def\poem@typesettitle{\normalfont\normalsize\sffamily\parindent\z@\relax\par{\poem@titlefont{\poem@title}\par}{\footnotesize\itshape\poem@author\poem@ifreg{date}{~--- \poem@date}{}\poem@ifreg{comment}{\begin{center}\poem@comment\end{center}}{}}\parskip\baselineskip\relax\par}
\def\poem@typesetend{\par}
\else
\def\poem@typesettitle{\normalfont\normalsize\rmfamily\parindent\z@\relax\par\textbf{\poem@title}\par{\footnotesize\itshape\poem@author\poem@ifreg{date}{~--- \poem@date}{}\poem@ifreg{comment}{\begin{center}\poem@comment\end{center}}{}}\parskip\baselineskip\relax\par}
\def\poem@typesetend{\par}
